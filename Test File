#include "stdio.h"
#include "stdlib.h"
#include "U8glib.h"

//U8GLIB_SH1106_128X64 u8g(U8G_I2C_OPT_NONE);        // I2C / TWI 
U8GLIB_SSD1306_128X64 u8g(10, 9, 12, 11);  // SW SPI Com: SCL = 10, SDA = 9, CS = 12, DC = 11,RES=RESET

void draw(void) {
  u8g.setFont(u8g_font_osb18);//set font
  u8g.drawStr(0, 20, "123");//disply content "123"
  u8g.setColorIndex(1);//display not transparent
}

void setup(void) {

}

void loop(void) {

  u8g.firstPage();  
  do {
    draw();
  } while( u8g.nextPage() );

}
